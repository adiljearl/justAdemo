<h1>Edit Posts</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="col-md-4 mb-3">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}" required>
    </div>

    <div class="col-md-4 mb-3">
        <label for="file">Upload File</label>
        <input name="file" type="file" class="form-control">
    </div>

    <div class="col-md-4 mb-3">
        <label for="title">Label: {{post.label}}</label>

        <select name="label" id="label" class="form-control">
            <option value="Aslihan">Aslihan</option>
            <option value="Aygul">Aygul</option>
            <option value="Bala">Bala</option>
            <option value="Gonca">Gonca</option>
            <option value="Halima">Halima</option>
            <option value="Selcan">Selcan</option>
            <option value="Malhun">Malhun</option>
            <option value="World">World</option>

        </select>

    </div>


    <div class="form-group">
        <label for="body">Words</label>

        <textarea name="body" cols="30" rows="10" class="form-control" id="body" required>{{post.body}}</textarea>

    </div>

    <button type="submit" class="btn btn-primary">Update Post</button>

</form>